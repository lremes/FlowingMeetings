<div id="header-container" class="d-flex justify-content-between shadow shadow-lg">
<div class="p-1 mr-auto"><%= link_to image_tag('logo.png', alt: 'FlowingVotings', style: 'max-height: 80px;'), "/" -%></div>
<div class="d-flex mr-3">
<div class="locale mt-3 p-2" data-locale="fi"><%= flag_icon(:fi) %></div>
<div class="locale mt-3 p-2" data-locale="en"><%= flag_icon(:gb) %></div>
</div>
<div class="d-flex">
<% if session[:meeting_id].present? %>
<div class="p-3 action"><%= link_to fa_icon('trash-alt'), destroy_meeting_path(), method: :delete, title: _('Delete meeting'), class: 'fa-2x', data: { toggle: 'tooltip', confirm: _('Are you sure you want delete this meeting?') } %></div>
<% end %>
<% if session[:meeting_id].present? %>
<div class="p-3 action"><%= link_to fa_icon('sign-out-alt'), admin_logout_path(), title: _('logout'), class: 'fa-2x', data: { toggle: 'tooltip' } %></div>
<% end %>
</div>
</div>
<script type="text/javascript">
$('body').on('click','.locale',function(ev){
    console.log(ev.target)
    var locale = $(ev.target).closest('.locale').data('locale');
    var url = window.location.href.split('?')[0]
    console.log(url);
    window.location.href = '?locale=' + locale;
})
</script>